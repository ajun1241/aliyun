<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.modcreater.tmdao.mapper.AccountMapper">
    <select id="doLogin" parameterType="com.modcreater.tmbeans.vo.LoginVo"
            resultType="com.modcreater.tmbeans.pojo.Account">
        select * from account where userCode=#{userCode} and userPassword=#{userPassword}
    </select>

    <insert id="register" parameterType="com.modcreater.tmbeans.pojo.Account">
        insert into account
            (userCode,
            userPassword,
            isFirst,
            userName,
            gender,
            birthday,
            IDcard,
            offlineTime,
            userType,
            headImgUrl
            )
        values (#{userCode}
            ,#{userPassword}
            ,#{isFirst}
            ,#{userName}
            ,#{gender}
            ,#{birthday}
            ,#{IDCard}
            ,#{offlineTime}
            ,#{userType}
            ,#{headImgUrl}
            )
    </insert>
    <select id="checkCode" parameterType="String" resultType="com.modcreater.tmbeans.pojo.Account">
        select * from account where userCode=#{userCode}
    </select>
    <select id="queryAccount" resultType="com.modcreater.tmbeans.pojo.Account">
        select * from account where id=#{id}
    </select>
    <update id="updateAccount" parameterType="com.modcreater.tmbeans.pojo.Account">
        update account
        <set>
            <if test="userName != null and userName!=''">
                userName = #{userName},
            </if>
            <if test="gender > 0 ">
                gender = #{gender},
            </if>
            <if test="birthday != null">
                birthday = #{birthday},
            </if>
            <if test="modifyDate != null">
                modifyDate = #{modifyDate},
            </if>
            <if test="userPassword != null">
                userPassword = #{userPassword},
            </if>
            <if test="isFirst != 0">
                isFirst = #{isFirst},
            </if>
            <if test="token != null">
                token = #{token},
            </if>
        </set>
        where id=#{id}
    </update>
    <update id="updateTimestampUnderAccount">
        update account
        <set>
            <if test="timestamp != null and timestamp != ''">
                time = #{timestamp}
            </if>
        </set>
        where id = #{userId}
    </update>
    <select id="queryTime" resultType="String">
        select `time` from account where id=#{id}
    </select>

    <select id="queryFriendByUserCode" parameterType="String" resultType="com.modcreater.tmbeans.pojo.Account">
        select * from account where userCode=#{userCode}
    </select>

    <insert id="buildFriendship" parameterType="com.modcreater.tmbeans.vo.uservo.BuildFriendshipVo">
        insert into friendship (userId,friendId) values (#{userId},#{friendId})
    </insert>

    <select id="queryFriendList" parameterType="String" resultType="com.modcreater.tmbeans.pojo.Account">
        SELECT * FROM account WHERE id IN (SELECT friendId FROM friendship WHERE userId=#{userId})
    </select>

    <update id="updateFriendJurisdiction" parameterType="com.modcreater.tmbeans.vo.uservo.UpdateFriendJurisdictionVo">
        update friendship
        <set>
            <if test="invite > = 0 ">
                invite=#{invite}
            </if>
             <if test="sustain > = 0 ">
                 sustain=#{sustain}
            </if>
             <if test="hide > = 0 ">
                 hide=#{hide}
            </if>
        </set>
        where id=#{id}
    </update>

    <delete id="deleteFriendship" parameterType="com.modcreater.tmbeans.vo.uservo.DeleteFriendshipVo">
        delete from friendship where userId=#{userId} and friendId=#{friendId}
    </delete>
</mapper>